extends layout
block topscrol
	include ./home_scroll.pug
block content
	if total_pages > 1
		<div class="col-xs-12">
			<ul class="pagination" align="center">
				if has_previous_page == 1
					<li> <a href="/#{previous_page}">&laquo; </a></li>
				each val in tot_p
					if val == current_page
						<li class="active"><span>#{val}<span class="sr-only">(current)</span></span></li>
					if val != current_page
						<li><a href="/#{val}">#{val}</a></li>
				if has_next_page == 1
					<li> <a href="/#{next_page}">&raquo; </a></li>
			</ul>
		</div>
	for sam in title
		<div class="col-xs-12">
			<div class="col-xs-3">
					<img  style="height:180px" class="img-responsive img-thumbnail" src="/newsFile/#{sam.postId}/file.jpg" />
			</div>
			<div class="col-xs-9">
				<h4 style="color:brown" ><strong>#{ sam.postType.toUpperCase()} : #{ sam.postTitle }</strong></h4>
				<h5 style="color:blue"><strong><span style="color:green">Posted By : </span>#{ sam.author } </h5>
				<h5><span style="color:green">Date Posted : </span>#{ sam.postDate}</strong></h5>
				<p>#{ sam.postBody.slice(0,350)} <strong style="color:brown"><a style="color:white;padding:2px" class="btn btn-primary" href="/read/#{ sam.postId }/">Read News &raquo; </a></strong></p>
				<hr/>
			</div>
		</div>
	if total_pages > 1
		<div class="col-xs-12">
			<ul class="pagination" align="center">
				if has_previous_page == 1
					<li> <a href="/#{previous_page}">&laquo; </a></li>
				each val in tot_p
					if val == current_page
						<li class="active"><span>#{val}<span class="sr-only">(current)</span></span></li>
					if val != current_page
						<li><a href="/#{val}">#{val}</a></li>
				if has_next_page == 1
					<li> <a href="/#{next_page}">&raquo; </a></li>
			</ul>
		</div>
block navbar
	include ./left_nav.pug