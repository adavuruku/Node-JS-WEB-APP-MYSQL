extends postAdmin
block user_Name
	<span style="color:DodgerBlue"> #{author}</span>
block content
	for sam in title
		<div class="col-xs-12">
			<div class="col-xs-12">
				<h5 style="color:white;padding:10px" class="btn btn-primary">Viewing : #{sam.postTitle.toUpperCase()}</h5>
				<h4 style="color:brown" ><strong><span style="font-family:due;">#{ sam.postType.toUpperCase()} :</span> #{ sam.postTitle}</strong></h4>
				<h5 style="color:blue"><strong><span style="color:green">Posted By : </span>#{ sam.author } <span style="color:green">- Date Posted : </span>#{ sam.postDate}</strong></h5>
				
			</div>
			
			<div class="col-xs-12">
				<hr/>
					<p>
						<strong style="color:brown">
							<a style="color:white;padding:2px" class="btn btn-info" href="/staff/redit/#{ sam.postId }/"><span class="glyphicon glyphicon-pencil"></span> Edit News <span class="glyphicon glyphicon-pencil"></span></a>
						</strong> |
						<strong style="color:brown">
							<a style="color:white;padding:2px" class="btn btn-danger" href="/staff/remove/#{ sam.postId }"><span class="glyphicon glyphicon-trash"></span> Delete News <span class="glyphicon glyphicon-trash"></span></a>
						</strong>
					</p>
				<hr/>
			</div>
			<div class="col-xs-12" style="font-family:tahoma;font-size:25px;spacing:2px;text-align:justify">
					<img  style="margin:15px" class="img-responsive img-thumbnail pull-left" src="/newsFile/#{sam.postId}/file.jpg" />
					<p>#{ sam.postBody}</p>
			</div>
			<div class="col-xs-12">
				<hr/>
					<p>
						<strong style="color:brown">
							<a style="color:white;padding:2px" class="btn btn-info" href="/staff/redit/#{ sam.postId }/"><span class="glyphicon glyphicon-pencil"></span> Edit News <span class="glyphicon glyphicon-pencil"></span></a>
						</strong> |
						<strong style="color:brown">
							<a style="color:white;padding:2px" class="btn btn-danger" href="/staff/remove/#{ sam.postId }"><span class="glyphicon glyphicon-trash"></span> Delete News <span class="glyphicon glyphicon-trash"></span></a>
						</strong>
					</p>
				<hr/>
			</div>
		</div>

block navbar
	include ./left_admin_nav.pug